{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "survey-response-schema",
    "title": "Survey Response",
    "description": "A generic survey response",
    "type": "object",

    "properties": {
        "surveyId": {
            "type": "string",
            "description": "unique id of survey"
        },
        "surveyName": {
            "type":"string",
            "description": "name of the survey"
        },
        "surveyTemplate": {
            "type":"string",
            "description": "name of the template used for the survey"
        },
        "responses": {
            "type":"array",
            "properties": {
                "questionNumber": {
                    "type":"integer",
                    "description": "number of question in the survey"
                },
                "questionType": {
                    "type":"string",
                    "description": "type of the question. Ex. multiple choice, free response",
                    "enum": ["ranking", "multipleChoice", "freeResponse"]
                },
                "text": {
                    "type":"string",
                    "description": "actual text of the question"
                },
                "responseText": {
                    "type": "string",
                    "description": "the text entered by the student if free response or the text of the option selected"
                }
            },
            "if": {
                "properties": { "questionType": { "const": "freeResponse" } }
            },
            "then": {
                "properties": { "studentResponse": { "type":"string" } }
            },
            "else": {
                "properties": { "studentResponse": { "type":"string" } }
            }
        }
    },
    "required": ["surveyId", "surveyName", "surveyTemplate", "responses"]
}